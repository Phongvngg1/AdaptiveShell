<Page
    x:Class="Shell.Pages.StartLiveTilesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Shell.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="StartLiveTilesPage_OnLoaded">
    
    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="Narrow">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <!-- Empty setters defaults to the layout specified in XAML below. -->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="Wide">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1007"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="StartScreen.Orientation" Value="Vertical" />
                        <Setter Target="StartScreen.VerticalAlignment" Value="Center" />
                        <Setter Target="StartScreen.HorizontalAlignment" Value="Left" />
                        <Setter Target="StartScreen.MaximumRowsOrColumns" Value="6" />
                        <Setter Target="StartScreenScrollViewer.VerticalScrollMode" Value="Disabled" />
                        <Setter Target="StartScreenScrollViewer.HorizontalScrollMode" Value="Enabled" />
                        <Setter Target="StartScreenScrollViewer.HorizontalScrollBarVisibility" Value="Visible" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <ScrollViewer
            x:Name="StartScreenScrollViewer">
            <VariableSizedWrapGrid
                x:Name="StartScreen"
                Orientation="Horizontal"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                ItemWidth="64"
                ItemHeight="64"
                MaximumRowsOrColumns="6"
                AllowDrop="True"/>
        </ScrollViewer>
    </Grid>
</Page>
