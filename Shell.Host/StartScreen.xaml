<Window x:Class="Shell.Host.StartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shell.Host"
        xmlns:Controls="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls"
        xmlns:xamlhost="clr-namespace:Microsoft.Toolkit.Wpf.UI.XamlHost;assembly=Microsoft.Toolkit.Wpf.UI.XamlHost"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        Height="{Binding Source={x:Static local:Functions.STARTSCREEN_HEIGHT}}"
        Loaded="Window_Loaded">
    <Grid>
        <xamlhost:WindowsXamlHost
            x:Name="RootFrame"
            InitialTypeName="Windows.UI.Xaml.Controls.Frame"
            ChildChanged="RootFrame_ChildChanged"/>
    </Grid>
</Window>
